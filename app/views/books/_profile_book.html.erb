
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= show_user.name%></th>
    </tr>
    <tr>
      <th>introduction</th>
        <th><%= show_user.introduction%></th>
      </tr>
  </tbody>
</table>

<div class="row">
  <a class="btn btn-outline-secondary btn-block edit-user-btn" href="/">
    <i class="fa-solid fa-user-gear" aria-hidden="true"></i>
  </a>
</div>

<%= form_with model: new_book do |f| %>
  <div>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit "Create Book" %>
  </div>  
<% end %>