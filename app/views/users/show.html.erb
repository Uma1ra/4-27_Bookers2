<div class="container mx-auto">
  <div class="row">
    <div class="col-md-3">

      <div>
        <%= render "books/userinfo", userinfo: @show_user, new_book: @new_book %>
      </div>
      
    </div>
      
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @show_user.books.each do |book| %>
            <tr>
              <td>
                <%= image_tag book.user.get_profile_image(80,80)%>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>