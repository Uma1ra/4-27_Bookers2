<div class="container">
  <div class="row">
    
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto px-5 px-sm-0">
      <h2 class="mb-2">User info</h2>
      
      <% if @edit_user.errors.any? %>
          <div>
            <h3><%= @edit_user.errors.count %>errors prohibited this obj from being saved:</h3>
            <ul>
              <% @edit_user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      
      <%= form_with model: @edit_user do |f| %>
        <div class="form-group">
          <h6>Name</h6>
          <%= f.text_field :name, class: "form-control" %>  
        </div>
        
        <div class="mb-3">
          <h6>Image</h6>
          <%= f.file_field :profile_image %>
        </div>
        
        <div class="form-group">
          <h6>Introduction</h6>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        
        
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
        
      <% end %>
    </div>
    
  </div>
</div>